<header>
    {{> header_nav}}
    <hr>
</header>

<main class="main">
    <div class="info">
        <h1 class="info_title">{{info.title}}</h1>
        <p class="info_description">{{info.description}}</p>
    </div>


    {{#with form}}
    <form class="form">
        <h2 class="form_title">{{title}}</h2>

        <div class="form_input_list">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
                id="form-input-{{id}}" />
            {{/each}}
        </div>

        <div class="form_checkbox">
            <input type="checkbox" name="{{checkbox.name}}" id="checkbox.name">
            <div></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>

        <button type="submit" class="form_button">{{button}}</button>
        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}
</main>

<section class="section">
    {{#with updates}}
    <h4 class="updates_title">{{title}}</h4>
    {{#each list}}
    <div class="updates_box">
        <span class="updates_block">32*32</span>
        <div class="nickname_block">
            <div class="updates_list_nickname">{{nickname}}</div>
            <p class="updates_list_description">{{description}}</p>
        </div>
    </div>
    {{/each}}
    <a href="{{url}}" class="updates_show_all">{{show_all.text}}</a>
    {{/with}}
</section>

<div class="expirience">
    {{#with expirience}}
    <h1 class="expirience_title">{{title}}</h1>
    <div class="expirience_badge">{{badge}}</div>
    <div class="list_block">
        {{#each list}}
        <div class="expirience_list">
            <h4 class="expirience_list_name">{{name}}</h4>
            <p class="expirience_list_details">{{details}}</p>
        </div>
        {{/each}}
    </div>
    {{/with}}
</div>

<footer>
    {{> temp_1_footer}}
</footer>